#:kivy 1.0.9

<IntroScreen>:
    IntroSlideshow:
        id: intro_slideshow
        size: root.size
        pos: root.pos

<IntroSlideshow>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # or any other desired color
        Rectangle:
            size: self.size
            pos: self.pos
    Image:
        id: slide_image
        allow_stretch: True
        keep_ratio: True
        source: root.slides[root.current_slide]
        center_x: self.parent.center_x
        center_y: self.parent.center_y

    Button:
        text: "Skip"
        size_hint: (None, None)
        size: (100, 50)
        pos_hint: {"right": 1, "top": 1}
        on_release: root.skip()

<MainMenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Welcome to Hidden Object Game'
        Button:
            text: 'New Game'
            on_press: app.root.current = 'game'
        Button:
            text: 'Exit'
            on_press: app.stop()

<GameScreen>:
    HiddenObjectGame:
