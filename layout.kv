<OptionsScreen>:


<MainMenuScreen>:

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Welcome to Hidden Object Game'
            background_color: 1, 1, 1, 1 #white, doesn't work yet
        Button:
            text: 'New Game'
            on_press: app.root.current = 'levels' #it should go to level selevtor not sure if it works
        Button:
            text: 'Exit'
            background_color: 0.494, 1, 0.973, 1  # test (R, G, B, A)
            on_press: app.stop()
        Button:
            text: 'Options'
            on_press: app.root.current = 'options'


<LevelSelecterScreen>:

    BoxLayout:
        orientation: 'vertical'
        id: level_selector_boxlayout
        Label:
            text: 'Select a Level'
        Slider:
            id: level_selector
            min: 0
            max: 4
            value: 0
        Button:
            text: 'Select level'
            on_press: root.select_level_press(level_selector.value)
        

<GameScreen>:
    BoxLayout:
        orientation: 'horizontal'

        # Game area (90% of width)
        HiddenObjectGame:
            size_hint_x: 0.9
            id: game_area

            canvas.before:
                StencilPush
                Rectangle:
                    pos: self.pos
                    size: self.size
                StencilUse

            canvas.after:
                StencilUnUse
                Rectangle:
                    pos: self.pos
                    size: self.size
                StencilPop

        # Status area (10% of width)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.1
            padding: 10  # Add some padding around the status items
            spacing: 10  # Add some space between status items

            Label:
                text: "Items to find:"
                font_size: '20sp'

            BoxLayout:
                id: item1
                Image:
                    source: "umbrella.png"
                    size_hint: (None, None)
                    size: (100, 100)  # or any other size you want for the icons
                    keep_ratio: True
                CheckBox:
                    active: root.ids.game_area.is_item_found('Umbrella')
                    readonly: True

