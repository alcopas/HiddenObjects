#:kivy 2.2.0

<IntroScreen>:
    CustomCarousel:
        id: intro_carousel
        direction: 'right'
        Image:
            source: 'Verabschiedung.jpg'
        Image:
            source: 'Slide2.jpg'
        Image:
            source: 'Slide3.jpg'



<OptionsScreen>:


<MainMenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Welcome to Hidden Object Game'
        Button:
            text: 'New Game'
            on_press: app.root.current = 'game'
        Button:
            text: 'Exit'
            on_press: app.stop()
        Button:
            text: 'Options'
            on_press: app.root.current = 'options'

<GameScreen>:
    BoxLayout:
        orientation: 'horizontal'

        # Game area (90% of width)
        HiddenObjectGame:
            size_hint_x: 0.9
            id: game_area

            canvas.before:
                StencilPush
                Rectangle:
                    pos: self.pos
                    size: self.size
                StencilUse

            canvas.after:
                StencilUnUse
                Rectangle:
                    pos: self.pos
                    size: self.size
                StencilPop

        # Status area (10% of width)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.1
            padding: 10  # Add some padding around the status items
            spacing: 10  # Add some space between status items

            Label:
                text: "Items to find:"
                font_size: '20sp'

            BoxLayout:
                id: item1
                Image:
                    source: "umbrella.png"
                    size_hint: (None, None)
                    size: (100, 100)  # or any other size you want for the icons
                    keep_ratio: True
                CheckBox:
                    active: root.ids.game_area.is_item_found('Umbrella')
                    readonly: True

            BoxLayout:
                id: item2
                Image:
                    source: "shoe.png"
                    size_hint: (None, None)
                    size: (100, 100)  # or any other size you want for the icons
                    keep_ratio: True
