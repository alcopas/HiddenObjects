#:kivy 1.0.9

<IntroScreen>:
    IntroSlideshow:
        id: intro_slideshow
        size: root.size
        pos: root.pos

<IntroSlideshow>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # or any other desired color
        Rectangle:
            size: self.size
            pos: self.pos
    Image:
        id: slide_image
        allow_stretch: True
        keep_ratio: True
        source: root.slides[root.current_slide]
        center_x: self.parent.center_x
        center_y: self.parent.center_y

    Button:
        text: "Skip"
        size_hint: (None, None)
        size: (100, 50)
        pos_hint: {"right": 1, "top": 1}
        on_release: root.skip()

<MainMenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Welcome to Hidden Object Game'
        Button:
            text: 'New Game'
            on_press: app.root.current = 'game'
        Button:
            text: 'Exit'
            on_press: app.stop()

<GameScreen>:
    BoxLayout:
        orientation: 'horizontal'

        # Game area (80% of width)
        HiddenObjectGame:
            size_hint_x: 0.9
            id: game_area

            canvas.before:
                StencilPush
                Rectangle:
                    pos: self.pos
                    size: self.size
                StencilUse

            canvas.after:
                StencilUnUse
                Rectangle:
                    pos: self.pos
                    size: self.size
                StencilPop

        # Status area (20% of width)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.1
            padding: 10  # Add some padding around the status items
            spacing: 10  # Add some space between status items

            Label:
                text: "Items to find:"
                font_size: '20sp'

            BoxLayout:
                id: item1
                Image:
                    source: "umbrella.png"
                    size_hint: (None, None)
                    size: (100, 100)  # or any other size you want for the icons
                    keep_ratio: True
                CheckBox:
                    active: root.ids.game_area.is_item_found('Umbrella')
                    readonly: True

            BoxLayout:
