#:kivy 1.0.9

<MainMenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Welcome to Hidden Object Game'
        Button:
            text: 'New Game'
            on_press: app.root.current = 'game'
        Button:
            text: 'Exit'
            on_press: app.stop()

<GameScreen>:
    HiddenObjectGame:

<IntroSlideshow>:
    Image:
        id: slide_image
        allow_stretch: True
        source: root.slides[root.current_slide]
    Button:
        text: "Skip"
        size_hint: (None, None)
        size: (100, 50)
        pos_hint: {"right": 1, "top": 1}
        on_release: root.skip()

<IntroScreen>:
    IntroSlideshow:
        id: intro_slideshow
        size: root.size
        pos: root.pos